<% provide(:title, "Главная страница") %>
<div id="blog">
	<div id="block">
		<span class='index-title'>Блог / </span>
		<span class='index-desc'>Последние добавленные статьи:</span><br>
		<% @articles.each do |article| %>
			<div class='wrap'>
				<div class="last-article">
				<span class="article-created">Опубликованно: <%= time_ago_in_words(article.created_at) %></span>
				<div class="article-title"><%= article.title %></div>
				<div class="article-info">
					<span class="article-category"><%= link_to article.category.title, article.category %></span> <span class="article-category"><%= article.views %></span>
				</div><div class="clearfix"></div>
				<p class="article-body"><%= sanitize(article.body[0..300].bbcode_to_html!+'...', attributes: %w(style class id)) %></p>
				</div>
				<p class="link">Комментариев: <%= article.comments.count %> &nbsp;&nbsp;  <%= link_to "Читать полностью", article %></p>
			</div>
		<% end %>
		<%= link_to "Перейти к списку статей -> ", articles_path, class:'module-link' %><br><%= link_to "Просмотр статей по категориям -> ", categories_path, class:'module-link' %>
	</div>
	<div id="block">
		<span class='index-title'>Галлерея / </span>
		<span class='index-desc'>Последние добавленные изображения:</span><br>
	</div>
	<div id="block">
		<span class='index-title'>Блок / </span>
		<span class='index-desc'>Последние добавленные элементы:</span><br>
	</div>
</div>
<br>