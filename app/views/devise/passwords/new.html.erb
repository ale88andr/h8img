<% provide(:title, 'h8img::Восстановление пароля') %>
<br>
<div id="auth">
	<h1>Забыли свой пароль? ... </h1>

	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	
	  <%= render 'common/form_errors', object: @user %><br>

	  <div>
	  	<%= f.label :email %>
	  	<%= f.email_field :email, :autofocus => true %>
	  </div><br>
	  
	  <div><%= f.submit "Выслать мне инструкцию по смене пароля" %></div><br>
	<% end %>

<%= render "devise/shared/links" %>
</div><br>